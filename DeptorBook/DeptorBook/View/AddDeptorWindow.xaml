<Window x:Class="DebtorBook.View.AddDebtorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DebtorBook.View"
        mc:Ignorable="d"
        Title="AddDebtorWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="54" Margin="181,84,0,0" TextWrapping="Wrap" Text="{Binding NewDebtor}" FontSize="25" VerticalAlignment="Top" Width="260"/>
        <Button x:Name="button" Content="Cancel" Command="{Binding CloseButtonCommand}" HorizontalAlignment="Left" Margin="231,246,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Content="Save" Command="{Binding SaveButtonCommand}"  HorizontalAlignment="Left" Margin="333,246,0,0" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="59" Margin="181,143,0,0" TextWrapping="Wrap" Text="{Binding NewDebt}" VerticalAlignment="Top" Width="260"/>
        <Label x:Name="label" Content="Add debtor" HorizontalAlignment="Left" Margin="181,52,0,0" VerticalAlignment="Top" Width="260"/>

    </Grid>
</Window>
